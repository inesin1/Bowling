<Window x:Class="BowlingTest2.EditFrameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowlingTest2"
        mc:Ignorable="d"
        Title="Редактирование фрейма" Height="250" Width="150">
    <StackPanel Margin="6">
        <TextBlock Text="Фрейм"/>
        <TextBox Name="frameTextBox" Margin="0 4 0 6" TextChanged="frameTextBox_TextChanged"/>

        <TextBlock Text="Бросок 1"/>
        <TextBox Name="shot1TextBox" Margin="0 4 0 6" TextChanged="shotTextBox_TextChanged"/>

        <TextBlock Text="Бросок 2"/>
        <TextBox Name="shot2TextBox" Margin="0 4 0 6" TextChanged="shotTextBox_TextChanged"/>

        <TextBlock Text="Бросок 3"/>
        <TextBox Name="shot3TextBox" Margin="0 4 0 8" TextChanged="shotTextBox_TextChanged"/>

        <Button Content="OK" Click="OKButton_Click" Name="okButton"/>
    </StackPanel>
</Window>
